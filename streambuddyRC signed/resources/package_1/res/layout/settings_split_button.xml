<?xml version='1.0' encoding='utf-8' ?>
<androidx.constraintlayout.widget.ConstraintLayout android:tag="layout/settings_split_button_0"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
  <com.google.android.material.card.MaterialCardView android:id="@id/leadingButton"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:descendantFocusability="blocksDescendants"
                        android:layout_width="0.0dp"
                        android:layout_height="40.0dp"
                        app:cardBackgroundColor="@color/setting_item_background"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/trailingButton"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Small"
                        app:strokeWidth="0.0dp">
    <androidx.appcompat.widget.LinearLayoutCompat android:paddingTop="8.0dp"
                          android:paddingBottom="8.0dp"
                          android:focusable="true"
                          android:duplicateParentState="true"
                          android:layout_width="fill_parent"
                          android:layout_height="fill_parent"
                          android:paddingStart="16.0dp"
                          android:paddingEnd="16.0dp">
      <com.google.android.material.textview.MaterialTextView android:textAppearance="?attr/textAppearanceLabelLarge"
                            android:textColor="@color/setting_item_leading_foreground"
                            android:gravity="center_vertical"
                            android:id="@id/leading"
                            android:focusable="true"
                            android:duplicateParentState="true"
                            android:layout_width="0.0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="1.0" />
      <com.google.android.material.textview.MaterialTextView android:textAppearance="?attr/textAppearanceLabelLarge"
                            android:textStyle="bold"
                            android:textColor="@color/setting_item_leading_foreground"
                            android:gravity="center_vertical"
                            android:id="@id/trailingText"
                            android:focusable="true"
                            android:duplicateParentState="true"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:alpha="0.5" />
    </androidx.appcompat.widget.LinearLayoutCompat>
  </com.google.android.material.card.MaterialCardView>
  <com.google.android.material.card.MaterialCardView android:id="@id/trailingButton"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:descendantFocusability="blocksDescendants"
                        android:layout_width="wrap_content"
                        android:layout_height="40.0dp"
                        android:layout_marginStart="8.0dp"
                        app:cardBackgroundColor="@color/setting_item_background"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/leadingButton"
                        app:layout_constraintTop_toTopOf="parent"
                        app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Small"
                        app:strokeWidth="0.0dp">
    <androidx.appcompat.widget.AppCompatImageView android:id="@id/trailingIcon"
                          android:duplicateParentState="true"
                          android:layout_width="wrap_content"
                          android:layout_height="fill_parent"
                          android:src="@drawable/ic_delete_outlined"
                          android:tint="@color/setting_item_trailing_foreground"
                          android:layout_marginStart="16.0dp"
                          android:layout_marginEnd="16.0dp"
                          app:tint="@color/setting_item_trailing_foreground" />
  </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>