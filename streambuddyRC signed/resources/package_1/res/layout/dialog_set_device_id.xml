<?xml version='1.0' encoding='utf-8' ?>
<LinearLayout android:orientation="vertical"
              android:padding="16.0dp"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content" xmlns:android="http://schemas.android.com/apk/res/android">
  <TextView android:textSize="20.0sp"
            android:id="@id/dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16.0dp"
            android:text="Set Device ID" />
  <EditText android:id="@id/edit_text_device_id"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16.0dp"
            android:hint="Enter Device ID"
            android:inputType="text" />
  <LinearLayout android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
    <Button android:id="@id/button_save"
            android:layout_width="0.0dp"
            android:layout_height="wrap_content"
            android:text="Save"
            android:layout_weight="1.0"
            android:layout_marginEnd="8.0dp" />
    <Button android:id="@id/button_cancel"
            android:layout_width="0.0dp"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:layout_weight="1.0"
            android:layout_marginStart="8.0dp" />
  </LinearLayout>
</LinearLayout>